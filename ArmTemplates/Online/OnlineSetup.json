{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": { "type": "string",
        "metadata": { "description": "Name of the VM" }
    },
    
    "initScript": { "type": "string",
        "metadata": { "description": "init script for custom script extension" }
    },
    "serverEnv": { "type": "string",
        "metadata": { "description": "passed to init script as serverEnv" }
    },
    "octopusEnv": { "type": "string",
        "metadata": { "description": "passed to init script as octopusEnv" }
    },
    "serverRole": { "type": "string",
        "metadata": { "description": "passed to init script as serverRole" }
    },
    "octopusRole": { "type": "string",
        "metadata": { "description": "passed to init script as octopusRole" }
    },
    "ServerSetup": { "type": "string",
        "metadata": { "description": "Json ASCII string object {SASToken, RedisCache, BLOBStorage, ...}" }
    },

    "aadGroupScript": { "type": "string",
      "metadata": { "description": "add AAD Group custom script extension" }
    },
    "aadGroupName": { "type": "string",
      "metadata": { "description": "Name of AAD Group to be add" }
    },
    "aadGroupExec": { "type": "securestring", 
       "defaultValue": "powershell -ExecutionPolicy Unrestricted -File add-aadGroup.ps1 -groupName \"az-sec-acl-arm-full\" -credB64json eyJ1c2VyIjogImFjbC1hcm0tb3duZXJAT3JpZmxhbWVDb3NtZXRpY3Mub25taWNyb3NvZnQuY29tIiwicGFzc3dvcmQiOiJhY2wtYXJtLW93bmVyMTIzIn0="
    },

    
    "vaultId": { "type": "string",
      "metadata": { "description": "Azure Vault ID" }
    }
  },

  "variables": {

    "credB64json": { 
      "reference": { "keyVault" : { "id": "[parameters('vaultId')]" },
                     "secretName": "add-aadGroup"
      }
    },

    // "credB64json": "[variables('vaultSecretAddGroupCredentials')))]",

    "aadGroupScriptSplit": "[split(parameters('aadGroupScript'), '/')]",
    "aadGroupScriptFirstFileName": "[variables('aadGroupScriptSplit')[sub(length(variables('aadGroupScriptSplit')), 1)]]",
    "aadGroupScriptBreak": "[split(variables('aadGroupScriptFirstFileName'), '?')]",
    "aadGroupScriptFileName": "[variables('aadGroupScriptBreak')[0]]"
    // "aadGroupScriptArgs": "[concat(' -groupName \"', parameters('aadGroupName'), '\" -credB64json ', variables('credB64json'))]"        
  },
  "resources": [
    { 
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/ManagedIdentityExtensionForWindows')]",
      "apiVersion": "2016-03-30",
      "location": "[resourceGroup().location]",
      "properties": {
          "publisher": "Microsoft.ManagedIdentity",
          "type": "ManagedIdentityExtensionForWindows",
          "typeHandlerVersion": "1.0",
          "autoUpgradeMinorVersion": true,
          "settings": { "port": 50342 },
          "protectedSettings": {}
      }
    },
    {
      "name": "[concat(parameters('vmName'), '/CustomScript-', variables('aadGroupScriptFileName') )]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.7",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[split(parameters('aadGroupScript'), ' ')]"
        },
        "protectedSettings": {
          "commandToExecute": "[variables('credB64json')]"   // "[parameters('aadGroupExec')]"
        }
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'), '/extensions/ManagedIdentityExtensionForWindows')]"        
      ]
    }    
  ]
}
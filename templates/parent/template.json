{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "existingVNETName": {
            "type": "String",
            "metadata": {
                "description": "Existing VNET that contains the domain controller"
            }
        },
        "existingVnetRG": {
            "type": "String",
            "metadata": {
                "description": "Existing VNET ResourceGroup"
            }
        },
        "existingSubnetName": {
            "type": "array",
            "metadata": {
                "description": "Existing subnet that contains the domain controller"
            }
        },
        "dnsLabelPrefix": {
            "type": "array",
            "metadata": {
                "description": "Unique public DNS prefix for the deployment. The fqdn will look something like '<dnsname>.westus.cloudapp.azure.com'. Up to 62 chars, digits or dashes, lowercase, should start with a letter: must conform to '^[a-z][a-z0-9-]{1,61}[a-z0-9]$'."
            }
        },
        "dnsLabelPrefixCnt": {
            "type": "array",
            "metadata": {
                "description": "count of VM for every vm name"
            }
        },

        "vmSize": {
            "defaultValue": "Standard_A2",
            "type": "String",
            "metadata": {
                "description": "The size of the virtual machines"
            }
        },
        "userDomain": {
            "type": "String",
            "metadata": {
                "description": "The FQDN of the user domain with permissions to add"
            }
        },
        "domainToJoin": {
            "type": "String",
            "metadata": {
                "description": "The FQDN of the AD domain"
            }
        },
        "domainUsername": {
            "type": "String",
            "metadata": {
                "description": "Username of the account on the domain"
            }
        },
        "domainPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "Password of the account on the domain"
            }
        },
        "ouPath": {
            "defaultValue": "",
            "type": "String",
            "metadata": {
                "description": "Specifies an organizational unit (OU) for the domain account. Enter the full distinguished name of the OU in quotation marks. Example: 'OU=testOU; DC=domain; DC=Domain; DC=com"
            }
        },
        "domainJoinOptions": {
            "defaultValue": 3,
            "type": "Int",
            "metadata": {
                "description": "Set of bit flags that define the join options. Default value of 3 is a combination of NETSETUP_JOIN_DOMAIN (0x00000001) & NETSETUP_ACCT_CREATE (0x00000002) i.e. will join the domain and create the account on the domain. For more information see https://msdn.microsoft.com/en-us/library/aa392154(v=vs.85).aspx"
            }
        },
        "vmAdminUsername": {
            "type": "String",
            "metadata": {
                "description": "The name of the administrator of the new VM and the domain. Exclusion list: 'admin','administrator"
            }
        },
        "vmAdminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "The password for the administrator account of the new VM and the domain"
            }
        },
        "initScript": {
            "type": "string",
            "metadata": {
                "description": "init script for custom script extension"
            }
        },
        "env": {
            "type": "string",
            "metadata": {
                "description": "passed to init script"
            }
        },
        "octopusEnv": {
            "type": "array",
            "metadata": {
                "description": "passed to init script"
            }
        },
        "region": {
            "type": "string",
            "metadata": {
                "description": "passed to init script"
            }
        },
        "role": {
            "type": "array",
            "metadata": {
                "description": "passed to init script"
            }
        },
        "SAS": {
            "type": "string",
            "metadata": {
                "description": "sas token passed to init script"
            }
        }
    },
    "variables": {
        "templatelink": "https://raw.githubusercontent.com/PiDiBi/ServerExtensionScript/initscript-dev/templates/parent/templateRole.json"
    },
    "resources": [
        {
            "apiVersion": "2015-01-01",
            "name": "[concat('roleDep', deployment().name, '-', padLeft(add(copyIndex(),1), 2, '0'))]",
            "type": "Microsoft.Resources/deployments",
            "copy": {
                "name": "nestedRoleDeploymentCopySet",
                "count": "[length(array(parameters('dnsLabelPrefix')))]"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('templatelink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "existingVNETName": {
                        "value": "[parameters('existingVNETName')]"
                    },
                    "existingVnetRG": {
                        "value": "[parameters('existingVnetRG')]"
                    },
                    "existingSubnetName": {
                        "value": "[array(parameters('existingSubnetName'))[copyIndex()]]"
                    },
                    "dnsLabelPrefix": {
                        "value": "[array(parameters('dnsLabelPrefix'))[copyIndex()]]"
                    },
                    "vmSize": {
                        "value": "[parameters('vmSize')]"
                    },
                    "userDomain": {
                        "value": "[parameters('userDomain')]"
                    },
                    "domainToJoin": {
                        "value": "[parameters('domainToJoin')]"
                    },
                    "domainUsername": {
                        "value": "[parameters('domainUsername')]"
                    },
                    "domainPassword": {
                        "value": "[parameters('domainPassword')]"
                    },
                    "ouPath": {
                        "value": "[parameters('ouPath')]"
                    },
                    "domainJoinOptions": {
                        "value": "[parameters('domainJoinOptions')]"
                    },
                    "vmAdminUsername": {
                        "value": "[parameters('vmAdminUsername')]"
                    },
                    "vmAdminPassword": {
                        "value": "[parameters('vmAdminPassword')]"
                    },
                    "env": {
                        "value": "[parameters('env')]"
                    },
                    "octopusEnv": {
                        "value": "[array(parameters('octopusEnv'))[copyIndex()]]"
                    },
                    "region": {
                        "value": "[parameters('region')]"
                    },
                    "role": {
                        "value": "[array(parameters('role'))[copyIndex()]]"
                    },
                    "initScript": {
                        "value": "[parameters('initScript')]"
                    },
                    "vmCount":{
                        "value": "[array(parameters('dnsLabelPrefixCnt'))[copyIndex()]]"
                    },
                    "SAS":{
                        "value": "[parameters('SAS')]"
                    }
                }
            }
        }
    ]
}